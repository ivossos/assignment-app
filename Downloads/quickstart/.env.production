# Configuração de Produção - Google Cloud Run
# IMPORTANTE: Configure estas variáveis no Google Cloud Console

# Ambiente
ENVIRONMENT=production
PORT=8080
FLASK_ENV=production
DEBUG=False

# OpenAI API (Configure no Google Cloud Console)
OPENAI_API_KEY=your_openai_api_key_here

# Twilio (Configure no Google Cloud Console se necessário)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# URLs base (será substituído pelo URL do Cloud Run)
BASE_URL=https://your-service-url.run.app

# Configurações de segurança
FLASK_SECRET_KEY=your_very_secure_secret_key_here

# Configurações de performance
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120
MAX_CONTENT_LENGTH=16777216

# Logs
LOG_LEVEL=INFO